# docker-compose.yaml
services:
  # 1. Сервис базы данных (PostgreSQL)
  db:
    image: postgres:15-alpine
    container_name: cmm_db
    environment:
      POSTGRES_DB: coffee_db
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password123
    volumes:
      - db-data:/var/lib/postgresql/data
    networks:
      - cmm-net
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d coffee_db"]
      interval: 10s
      timeout: 5s
      retries: 5

  # 2. Сервис бэкенда (Node.js API)
  server:
    build:
      context: ./server
      dockerfile: Dockerfile.json
    container_name: cmm_server
    env_file:
      - ./server/.env
    ports:
      - "4000:4000"
    depends_on:
      db:
        condition: service_healthy
    networks:
      - cmm-net

  # 3. Сервис фронтенда (Nginx для раздачи статики)
  client:
    build:
      context: .
      dockerfile: Dockerfile.json
    container_name: cmm_client
    ports:
      - "8080:80"
    depends_on:
      - server
    networks:
      - cmm-net

networks:
  cmm-net:
    driver: bridge

volumes:
  db-data:
    driver: local